<div class="container">
  <% provide(:title, "Edit user") %>
  <h1>Update your setting</h1>

  <div class="row">
    <div class="col-md-4">
      <div class="row">
        <%= image_tag gravatar_url(@user), class: "gravatar" %>
      </div>

      <div class="row-space-1">
        <% unless @user.image %>
          <a href="http://gravatar.com/emails" target="_blank">Change your picture</a>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        </br>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>