<div class="container">
<% provide(:title, "Edit user") %>
<h1>Update your setting</h1>

<div class="row">
  <div class="col-md-4">
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails" target="_blank">change</a>
  </div>
  <div class="col-md-8">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>