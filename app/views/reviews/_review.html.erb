<% show_post ||= false %> <!-- To turn on condition to display on different pages -->

<%= content_tag :div, class: 'media', id: "review-#{review.id}" do %>
  <div class="media-body">
    <div class="col-md-1">
      <%= image_tag gravatar_url(review.user), class: "img-circle avatar-medium" %>
    </div>

    <div class="col-md-11">
    <small>
      <%= review.user.name %> wrote <%= time_ago_in_words(review.created_at) %> ago
      <% if user_is_authorized_for_review?(review) %>
        | <%= link_to "Delete", [review.post, review], method: :delete, remote: true %>
      <% end %>
    </small>
    <p><%= review.body %></p>
      <% if show_post %> <!-- Only user show pag instead of post show page -->
        on <%= link_to review.post.title, [review.post.category, review.post] %>
      <% end %>
    </div>
    
  </div>
<% end %>