<div class="container">
<ul class="nav nav-pills">
  <li class="<%= 'active' if current_page?(posts_path) %>">
            <%= link_to 'Recent Posts', posts_path %></li>
  <% Category.all.each do |category| %>
  <li class="<%= 'active' if current_page?(category_path(id: category.slug)) %>">
            <%= link_to category.name, category %></li>
  <% end %>


<% if logged_in? && current_user.admin? %>
<div class='btn-group nav_item pull-right'>
  <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    Categories<span class='caret'></span>
  <% end %>
  <ul class="dropdown-menu">
    <li><%= link_to "New category", new_category_path %></li>
    <li><%= link_to "Category index", categories_path %></li>
  </ul>
</div>
<% end %>
</ul>
</div>