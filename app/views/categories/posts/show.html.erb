<div class="row">
  <div class="col-md-8">
    <h1>
      <%= @post.title %>
    </h1>
    <small>
      posted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p><%= @post.body %></p>

    </br>
    <% if current_user?(@post.user) %>
      <%= link_to "Edit", edit_category_post_path(@category, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>