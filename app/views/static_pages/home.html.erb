<% if logged_in? %>
  <div class="row">
    <div class="tabbable tabs-left">
      <ul class="nav nav-tabs">
        <% @categories.each do |category| %>
        <li><a href="#<%=category.name.gsub(' ', '_') %>" data-toggle="tab"><%= category.name %></a></li>
        <% end %>
      </ul>
      <div class="tab-content">
        <% @categories.each do |category| %>
          <div class="tab-pane" id="<%=category.name.gsub(' ', '_') %>">
            <% category.posts.each do |post| %>
            
              <li><%= link_to post.title %></li>

            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the Pets Home!</h1>
  <h2>
    Get help from other pet's lovers is fast and easy!
  </h2>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
