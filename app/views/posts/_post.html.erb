<div class="media">
  <div class="media-body">
    <div class="col-md-2">
      <%= image_tag post.postattachments[0].picture.url(:thumb) if post.postattachments.length > 0 %>
    </div>
    <div class="col-md-10">
    <h4 class="media-heading">
      <%= link_to post.title, [post.category, post] %>
    </h4>
    <small>
      submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %><br/>
    </small>
        
    </div>
  </div>
</div>
