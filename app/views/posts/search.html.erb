<div class="container">
<div class="row">
  <div class="col-md-12">
  
    <h1>Search</h1>
      <div class="form-group">
        <%= form_tag search_posts_path, method: :get do %>
        <div class="col-md-8">
        <%= text_field_tag :search, params[:search], class: "form-control",placeholder: 'Search for..' %>
        </div>
        <%= submit_tag "Find", name: nil, class: "btn btn-default" %>
        <% end %>
      </div>
  </div>
    <%= render @posts %>
   
</div>
</div>

